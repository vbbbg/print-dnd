{
    "name": "print-dnd-monorepo",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "dev:web": "pnpm --filter print-editor dev",
        "dev:pdf": "pnpm --filter pdf-generator dev",
        "build:web": "pnpm --filter print-editor build:app",
        "install:all": "pnpm install",
        "prepare": "husky install"
    },
    "devDependencies": {
        "concurrently": "^8.2.0",
        "husky": "^8.0.3",
        "lint-staged": "^13.2.3",
        "prettier": "^3.0.0"
    },
    "lint-staged": {
        "*.{js,css,md,ts,tsx}": "prettier --write"
    },
    "pnpm": {
        "overrides": {
            "@types/react": "^18.2.0",
            "@types/react-dom": "^18.2.0"
        }
    }
}